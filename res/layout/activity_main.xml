<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/activity_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/activity_title_color" >

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_title_main"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_title_layout"
        android:layout_marginTop="@dimen/activity_horizontal_margin" >

        <RelativeLayout
            android:id="@+id/wo_yao_jia_meng"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#FF3300" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/wo_yao_jia_meng_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_icon_height"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/main_icon_margin_top"
                    android:src="@drawable/gongsijianjie_icon" />

                <TextView
                    android:id="@+id/wo_yao_jia_meng_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_text_height"
                    android:layout_below="@id/wo_yao_jia_meng_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/main_text_margin_top"
                    android:text="我要加盟"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/main_text_font_size" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/wo_yao_jia_meng"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/gong_si_jian_jie"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9966CC" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/gong_si_jian_jie_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_icon_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_icon_margin_top"
                        android:src="@drawable/gongsijianjie_icon" />

                    <TextView
                        android:id="@+id/gong_si_jian_jie_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_text_height"
                        android:layout_below="@id/gong_si_jian_jie_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_text_margin_top"
                        android:text="公司简介"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/main_text_font_size" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/zhao_shang_jian_jie"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="#3399CC" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/zhao_shang_jian_jie_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_icon_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_icon_margin_top"
                        android:src="@drawable/gongsijianjie_icon" />

                    <TextView
                        android:id="@+id/zhao_shang_jian_jie_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_text_height"
                        android:layout_below="@id/zhao_shang_jian_jie_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_text_margin_top"
                        android:text="招商简介"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/main_text_font_size" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/wo_yao_jia_meng"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/he_zuo_mo_shi"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CC6666" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/he_zuo_mo_shi_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_icon_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_icon_margin_top"
                        android:src="@drawable/gongsijianjie_icon" />

                    <TextView
                        android:id="@+id/he_zuo_mo_shi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_text_height"
                        android:layout_below="@id/he_zuo_mo_shi_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_text_margin_top"
                        android:text="合作模式"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/main_text_font_size" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/he_zuo_zhe_li_run_dian"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="#00CC33" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/he_zuo_zhe_li_run_dian_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_icon_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_icon_margin_top"
                        android:src="@drawable/gongsijianjie_icon" />

                    <TextView
                        android:id="@+id/he_zuo_zhe_li_run_dian_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/main_text_height"
                        android:layout_below="@id/he_zuo_zhe_li_run_dian_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/main_text_margin_top"
                        android:text="合作者利润点"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/main_text_font_size" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>